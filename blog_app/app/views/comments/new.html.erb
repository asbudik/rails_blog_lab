<div class="col-xs-offset-4 col-xs-4">
<div>
  <h2><%= @post.title %></h2> <br>
  <h6><%= @post.author %></h6><br>
  <p><%=  @post.description %></p>
</div>

  <%= form_for [@post, @comment] do |f| %>
    <%= f.text_field :name, placeholder: "Guest name", class: "form-control"%><br>
    <%= f.text_area :body, placeholder: "Post here", class: "form-control" %><br>
    <%= f.submit "Save Comment", class: "edit-button btn btn-primary" %>
  <% end %>
</div>